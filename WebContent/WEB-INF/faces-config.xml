<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<navigation-rule>
		<from-view-id>/inscricao.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/inscricao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/agenda.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/agenda.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/empresa.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/default.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<lifecycle>
		<phase-listener>br.com.gruposuria.listener.AuthorizationListener</phase-listener>
		<!-- <phase-listener>br.com.gruposuria.listener.Autorizador</phase-listener> -->
	</lifecycle>
	
</faces-config>
